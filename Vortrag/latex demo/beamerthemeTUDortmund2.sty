\typeout{presentation style for Chair of Mathematics III (Turek)}
\typeout{written 2005--2008 by Christian Becker, Sven H.M. Buijssen & Dominik Goeddeke}
\typeout{TU Dortmund}
\typeout{ }

\mode<presentation>

\useoutertheme[subsection=false]{navbarbottom_TUDortmund2}
\useinnertheme[shadow=true]{rounded}
\usecolortheme{orchid}
\usecolortheme{whale}
\usefonttheme{professionalfonts}

\setbeamertemplate{sections/subsections in toc}[square]
\setbeamertemplate{items}[square]

\setbeamercolor{frametitle}{fg=black,bg=TUDgreen}
\setbeamercolor{navbar}{fg=black,bg=TUDgreen}

\setbeamercolor{item}{fg=TUDgreen}
\setbeamercolor{subitem}{fg=TUDgreen}
\setbeamercolor{subsubitem}{fg=TUDgreen}
\setbeamercolor{titlelike}{fg=white,bg=TUDgreen}

\setbeamercolor{section in toc}{fg=TUDgreen}

\setbeamercolor{block title}{fg=black,bg=TUDgreen!50!bg}
\setbeamercolor{block body}{parent=normal text,%
                            use=block title,%
                            bg=block title.bg!20!bg}

\setbeamercolor{block title alerted}{fg=white,bg=black!50!bg}
\setbeamercolor{block body alerted}{parent=normal text,%
                                 use=block title example,%
                                 bg=block title example.bg!10!bg}

\setbeamerfont{block title}{size={}}

\setbeamercovered{transparent}

\mode
<all>
